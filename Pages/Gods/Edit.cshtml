@page "{id:int}"
@model NewStart.Pages.Gods.EditModel
@{
    ViewData["Title"] = "Edit";
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/CRUDpages.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>

        <h1>
            Edit God
        </h1>

        <form method="post">
            <table>
                <tbody>
                    <tr id="TableFlex">
                        <th><label asp-for="editableGod.Name">Name</label></th>
                        <td><input asp-for="editableGod.Name" /></td>
                        <td><span asp-validation-for="editableGod.Name"></span></td>
                        <th><label asp-for="editableGod.Trivia">Trivia</label></th>
                        <td><input asp-for="editableGod.Trivia" /></td>
                        <td><span asp-validation-for="editableGod.Trivia"></span></td>
                        <th><label asp-for="editableGod.Age">Age</label></th>
                        <td><input asp-for="editableGod.Age" /></td>
                        <td><span asp-validation-for="editableGod.Age"></span></td>
                        <th><label asp-for="editableGod.Focus">Focus</label></th>
                        <td><input asp-for="editableGod.Focus" /></td>
                        <td><span asp-validation-for="editableGod.Focus"></span></td>
                        <th><label asp-for="editableGod.Mythology.Name">Mythology</label></th>
                        <td>
                            <select asp-for="editableGod.Mythology.Name">
                                @foreach (var mythology in Model.mythologyList)
                                {
                                    <option value=@mythology>@mythology</option>
                                }
                            </select>
                        </td>
                        <td><span asp-validation-for="editableGod.Mythology.Name"></span></td>
                    </tr>
                </tbody>
            </table>
            <button type="submit">Save God</button>
        </form>
    </main>
</body>