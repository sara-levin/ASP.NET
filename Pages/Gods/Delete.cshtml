@page
@model NewStart.Pages.Gods.DeleteModel
@{
    ViewData["Title"] = "Delete God";
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/CRUDpages.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>

        <h1>Delete this God?</h1>

        <p>Name: @Model.god.Name</p>
        <p>Trivia: @Model.god.Trivia</p>
        <p>Age: @Model.god.Age</p>
        <p>Focus: @Model.god.Focus</p>
        <p>Mythology: @Model.god.Mythology.Name</p>

        <form method="post">
            <p>Do you really wish to erase this mighty god from the very fabric of existence?</p>
            <button type="submit">Aye, not even a God can stand against the power of the delete button</button>
            <a asp-page="./Index">Nay, taketh me back from whence I came!</a>
        </form>
    </main>
</body>