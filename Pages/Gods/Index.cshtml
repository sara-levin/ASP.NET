@page
@model NewStart.Pages.Gods.IndexModel
@{
    ViewData["Title"] = "Index";
}

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <script src="/js/main.js"></script>
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/Main.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>
        <section id="IndexPage">

            <h1>GODS</h1>

            <a class="EDD-hyperlink" asp-page="./Create"> Create New God</a>

            <form method="get">
                <table id="SearchTable">
                    <tbody>
                        <tr>
                            <th><label for="searchTerm">Search</label></th>
                            <td><input type="search" name="SearchTerm" id="SearchTerm" value="@Model.SearchTerm" /></td>
                        </tr>
                        <tr>
                            <th><label for="SortColumn">Sort by</label></th>
                            <td>
                                <select asp-for="SortColumn" name="SortColumn" id="SortColumn">
                                    <option>Name</option>
                                    <option>Age</option>
                                    <option>Focus</option>
                                    <option>Mythology</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button type="submit">Search</button>
            </form>

            <table id="table">
                <tr>
                    <th class="Table-headers">Name</th>
                    <th class="Table-headers">Mythology</th>
                    <th class="Table-headers">Age</th>
                    <th class="Table-headers">Focus</th>
                </tr>

                @foreach (var god in Model.Gods)
                {
                    <tr>
                        <td class="Table-entries">
                            @god.Name
                        </td>
                        <td class="Table-entries">
                            @god.Mythology.Name
                        </td>
                        <td class="Table-entries">
                            @god.Age
                        </td>
                        <td class="Table-entries">
                            @god.Focus
                        </td>

                        <td class="EDD">
                            <a class="EDD-hyperlink" asp-page="./Edit" asp-route-id="@god.ID">Edit</a> |
                        </td>
                        <td class="EDD">
                            <a class="EDD-hyperlink" asp-page="./Details" asp-route-id="@god.ID">Details</a> |
                        </td>
                        <td class="EDD">
                            <a class="EDD-hyperlink" asp-page="./Delete" asp-route-id="@god.ID">Delete</a> |
                        </td>

                    </tr>
                }

            </table>
        </section>
    </main>
</body>