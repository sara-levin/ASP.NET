@page
@model NewStart.Pages.Mythologies.DeleteModel
@{
    ViewData["Title"] = "Delete Mythology";
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/CRUDpages.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>

        <h1>Delete this Mythology?</h1>
        <h2>WARNING: DELETING A MYTHOLOGY WILL DELETE ALL ITS RELATED GODS AND UNITS: PROCEED WITH CAUTION!</h2>

        <p>Name: @Model.mythology.Name</p>
        <p>Country of orgin: @Model.mythology.OrginCountry</p>
        <p>Date: @Model.mythology.Date</p>



        <form method="post">
            <p>Do you really wish to erase this entire mythology from the universe?</p>
            <button type="submit">Aye, all things must come to an end.</button>
            <a asp-page="./Index">Nay, taketh me back from whence I came!</a>
        </form>
    </main>
</body>