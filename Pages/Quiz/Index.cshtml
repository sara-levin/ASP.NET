@page
@model NewStart.Pages.Quiz.IndexModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/Main.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>
        <section id="IndexPage">
            <h1>QUIZ</h1>
            <h2>What mythology fits you best?</h2>
            <form method="get">
                <label class"p">To you, what is the most important trait in a unit?</label>
                <select asp-for="SortColumn" id="">
                    <option value="" selected disabled hidden>Choose here</option>
                    <option>HP</option>
                    <option>Attack</option>
                    <option>Cost</option>
                    <option>Coolest</option>
                </select>
                <button type="submit">Submit</button>   

                <h3>@Model.AverageVariable.Commentary</h3>
                <h3 id="QuizResult">@Model.AverageVariable.MythologyName</h3>
            </form>
        </section>
    </main>
</body>