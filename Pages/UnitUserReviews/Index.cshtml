@page
@model NewStart.Pages.UnitUserReviews.IndexModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <script src="/js/main.js"></script>
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/Main.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>
        <section id="IndexPage">
            <h1>Reviews</h1>

            <a class="EDD-hyperlink" asp-page="./Create"> Create New Review</a>

            <table>
                <tr>
                    <th class="Table-headers">Unit</th>
                    <th class="Table-headers">Review</th>
                </tr>

               @foreach (var review in Model.UnitUserReviews)
                {
            <tr>
                <td class="Table-entries">
                    @review.Unit.Name
                </td>
                <td class="Table-entries">
                    @review.Review
                </td>

                <td class="EDD">
                    <a class="EDD-hyperlink" asp-page="./Edit" asp-route-id="@review.ID">Edit</a> |
                </td>

                <td class="EDD">
                    <a class="EDD-hyperlink" asp-page="./Delete" asp-route-id="@review.ID">Delete</a> |
                </td>
            </tr>
                }
            </table>
        </section>
    </main>
</body>
