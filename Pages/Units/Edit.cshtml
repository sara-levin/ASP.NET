@page "{id:int}"
@model NewStart.Pages.Units.EditModel
@{
    ViewData["Title"] = "Edit";
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/CRUDpages.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>

        <h1>
            Edit Unit
        </h1>

        <form method="post">
            <table>
                <tbody>
                    <tr id="TableFlex">
                        <th><label asp-for="editableUnit.Name">Name</label></th>
                        <td><input asp-for="editableUnit.Name" /></td>
                        <td><span asp-validation-for="editableUnit.Name"></span></td>
                        <th><label>Class</label></th>
                        <td><input asp-for="editableUnit.Class" /></td>
                        <td><span asp-validation-for="editableUnit.Class"></span></td>
                        <th><label>Hitpoints</label></th>
                        <td><input asp-for="editableUnit.Hitpoints" /></td>
                        <td><span asp-validation-for="editableUnit.Hitpoints"></span></td>
                        <th><label>Attack</label></th>
                        <td><input asp-for="editableUnit.Attack" /></td>
                        <td><span asp-validation-for="editableUnit.Attack"></span></td>
                        <th><label>Cost</label></th>
                        <td><input asp-for="editableUnit.Cost" /></td>
                        <td><span asp-validation-for="editableUnit.Cost"></span></td>
                        <th><label asp-for="editableUnit.Mythology.Name">Mythology</label></th>
                        <td>
                            <select asp-for="editableUnit.Mythology.Name" id="mythMenu">
                                @foreach (var mythology in Model.mythologyList)
                                {
                                    <option value=@mythology>@mythology</option>
                                }
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button type="submit">Save Unit</button>
        </form>
    </main>
</body>