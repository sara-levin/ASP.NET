@page
@model NewStart.Pages.Units.IndexModel
@{
    ViewData["Title"] = "Index";
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <script src="/js/main.js"></script>
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/Main.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>
        <section id="IndexPage">

            <h1>UNITS</h1>

            <a class="EDD-hyperlink" asp-page="./Create"> Create New Unit</a>

            <form method="get">
                <table id="SearchTable">
                    <tbody>
                        <tr>
                            <th><label for="searchTerm">Search</label></th>
                            <td><input type="search" name="SearchTerm" id="SearchTerm" value="@Model.SearchTerm" /></td>
                        </tr>
                        <tr>
                            <th><label for="SortColumn">Sort by</label></th>
                            <td>
                                <select asp-for="SortColumn" name="SortColumn" id="SortColumn">
                                    <option>Name</option>
                                    <option>Class</option>
                                    <option>Hitpoints</option>
                                    <option>Attack</option>
                                    <option>Cost</option>
                                    <option>Mythology</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button type="submit">Search</button>
            </form>

            <table id="table">
                <tr>
                    <th class="Table-headers">Name</th>
                    <th class="Table-headers">Class</th>
                    <th class="Table-headers">Hitpoints</th>
                    <th class="Table-headers">Attack</th>
                    <th class="Table-headers">Cost</th>
                    <th class="Table-headers">Mythology</th>
                </tr>

               @foreach (var unit in Model.Units)
                {
                <tr>
                    <td class="Table-entries">
                        @unit.Name
                    </td>
                    <td class="Table-entries">
                        @unit.Class
                    </td>
                    <td class="Table-entries">
                        @unit.Hitpoints
                    </td>
                    <td class="Table-entries">
                        @unit.Attack
                    </td>
                    <td class="Table-entries">
                        @unit.Cost
                    </td>
                    <td class="Table-entries">
                        @unit.Mythology.Name
                    </td>

                    <td class="EDD">
                        <a class="EDD-hyperlink" asp-page="./Edit" asp-route-id="@unit.ID">Edit</a> |
                    </td>
                    <td class="EDD">
                        <a class="EDD-hyperlink" asp-page="./Details" asp-route-id="@unit.ID">Details</a> |
                    </td>
                    <td class="EDD">
                        <a class="EDD-hyperlink" asp-page="./Delete" asp-route-id="@unit.ID">Delete</a> |
                    </td>
                </tr>
                }

            </table>
        </section>
    </main>
</body>