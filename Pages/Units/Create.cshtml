@page

@model NewStart.Pages.Units.CreateModel
@using NewStart.Models;
@{
    ViewData["Title"] = "Create";
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/CRUDpages.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>

        <h1>
            Create New Unit
        </h1>

        <form method="post">
            <table>
                <tbody>
                    <tr id="TableFlex">
                        <th><label asp-for="createdUnit.Name">@Html.DisplayNameFor(x => x.createdUnit.Name)</label></th>
                        <td><input asp-for="createdUnit.Name" /></td>
                        <td><span asp-validation-for="createdUnit.Name"></span></td>
                        <th><label>Class</label></th>
                        <td><input asp-for="createdUnit.Class" /></td>
                        <td><span asp-validation-for="createdUnit.Class"></span></td>
                        <th><label>Hitpoints</label></th>
                        <td><input asp-for="createdUnit.Hitpoints" /></td>
                        <td><span asp-validation-for="createdUnit.Hitpoints"></span></td>
                        <th><label>Attack</label></th>
                        <td><input asp-for="createdUnit.Attack" /></td>
                        <td><span asp-validation-for="createdUnit.Attack"></span></td>
                        <th><label>Cost</label></th>
                        <td><input asp-for="createdUnit.Cost" /></td>
                        <td><span asp-validation-for="createdUnit.Cost"></span></td>
                        <th><label asp-for="createdUnit.Mythology.Name">Mythology</label></th>
                        <td>
                            <select asp-for="createdUnit.Mythology.Name">
                                @foreach (var mythology in Model.mythologyList)
                                {
                                    <option value=@mythology>@mythology</option>
                                }
                            </select>
                        </td>
                        <td><span asp-validation-for="createdUnit.Mythology.Name"></span></td>

                    </tr>
                </tbody>
            </table>
            <button type="submit">Save Unit</button>
        </form>
    </main>
</body>
