@page
@model NewStart.Pages.Units.DeleteModel
@{
    ViewData["Title"] = "Delete Unit";
}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Age of Mythology">
    <title>Age of Mythology</title>
    <link rel="stylesheet" href="~/css/CRUDpages.css">
</head>
<body>
    <main>
        <nav id="NavigationBar">
            <a class="MenuOption" asp-area="" asp-page="/Index">
                Home
            </a>
            <a class="MenuOption" href="/Units">
                Units
            </a>
            <a class="MenuOption" href="/Mythologies">
                Mythologies
            </a>
            <a class="MenuOption" href="/Gods">
                Gods
            </a>
            <a class="MenuOption" href="/Quiz">
                Quiz
            </a>
            <a class="MenuOption" href="/Reviews">
                Review
            </a>
        </nav>

        <h1>Delete this Unit?</h1>

        <p>Name: @Model.unit.Name</p>
        <p>Class: @Model.unit.Class</p>
        <p>Hitpoints: @Model.unit.Hitpoints</p>
        <p>Attack: @Model.unit.Attack</p>
        <p>Cost: @Model.unit.Cost</p>
        <p>Mythology: @Model.unit.Mythology.Name</p>

        <form method="post">
            <p>Do you really wish to erase this splendorious creation from existence?</p>
            <button type="submit">Aye, rid me of this foolish mortal!</button>
            <a asp-page="./Index">Nay, taketh me back from whence I came!</a>
        </form>
    </main>
</body>
